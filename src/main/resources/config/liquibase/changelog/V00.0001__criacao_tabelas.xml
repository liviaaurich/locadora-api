<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

        <property name="now" value="now()" dbms="h2"/>
        <property name="now" value="sysdate" dbms="oracle"/>

        <changeSet id="1" author="livia.aurich">
            <createSequence cacheSize="20" cycle="false" incrementBy="1" ordered="false" sequenceName="SEQ_ATOR" startValue="1"/>
            <createSequence cacheSize="20" cycle="false" incrementBy="1" ordered="false" sequenceName="SEQ_CLASSE" startValue="1"/>
            <createSequence cacheSize="20" cycle="false" incrementBy="1" ordered="false" sequenceName="SEQ_DIRETOR" startValue="1"/>
            <createSequence cacheSize="20" cycle="false" incrementBy="1" ordered="false" sequenceName="SEQ_ITEM" startValue="1"/>
            <createSequence cacheSize="20" cycle="false" incrementBy="1" ordered="false" sequenceName="SEQ_TITULO" startValue="1"/>
        </changeSet>

        <changeSet id="2" author="livia.aurich">
            <createTable remarks="Tabelas onde serão armazenados os atores." tableName="TB_ATOR">
                <column name="ID" remarks="Codigo identificador de cada ator." type="NUMBER(4)">
                    <constraints nullable="false"/>
                </column>
                <column name="NOME" remarks="Nome do ator." type="VARCHAR2(76 CHAR)">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <createTable remarks="Tabelas onde serão armazenados os diretores." tableName="TB_DIRETOR">
                <column name="ID" remarks="Codigo identificador de cada diretor." type="NUMBER(4)">
                    <constraints nullable="false"/>
                </column>
                <column name="NOME" remarks="Nome do diretor." type="VARCHAR2(76 CHAR)">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <createTable remarks="Tabelas onde serão armazenadas as classes." tableName="TB_CLASSE">
                <column name="ID" remarks="Codigo identificador de cada classe." type="NUMBER(4)">
                    <constraints nullable="false"/>
                </column>
                <column name="NOME" remarks="Nome da classe." type="VARCHAR2(76 CHAR)">
                    <constraints nullable="false"/>
                </column>
                <column name="VALOR" remarks="Valor da classe." type="DECIMAL(5, 2)">
                    <constraints nullable="false"/>
                </column>
                <column name="PRAZO_DEVOLUCAO" remarks="Prazo de devolução da classe." type="DATE">
                    <constraints nullable="false"/>
                </column>
            </createTable>
        </changeSet>
</databaseChangeLog>
